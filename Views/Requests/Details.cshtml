@model SimpleCRM.Models.Request

<h2>Подробности обращения</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Дата создания:</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")</dd>

        <dt class="col-sm-2">Тема:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Описание:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Статус:</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Ответственный сотрудник:</dt>
        <dd class="col-sm-10">@Model.ResponsibleEmployee</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>